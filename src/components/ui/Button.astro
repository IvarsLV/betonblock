---
interface Props {
  href: string;
  variant?: 'default' | 'primary' | 'secondary';
  className?: string;
}

const { href, variant = 'default', className = '' } = Astro.props;

// Базовые классы
const baseClasses: string = 'px-4 py-2 rounded font-medium transition-colors duration-300';

// Варианты стилей
const variantClasses = {
  default: 'bg-gray-200 text-gray-800 hover:bg-gray-300',
  primary: 'bg-accent text-white hover:bg-hoverAccent',
  secondary: 'bg-white text-gray-800 border border-gray-300 hover:bg-gray-50',
} as const;

// Тип для variant как ключи variantClasses
type Variant = keyof typeof variantClasses;

// Комбинируем классы
const classes: string = `${baseClasses} ${variantClasses[variant as Variant]} ${className}`;
---

<a href={href} class={classes}>
  <slot />
</a>